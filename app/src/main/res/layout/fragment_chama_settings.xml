<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bb"
    tools:context=".ChamaSettingsFragment">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/design_default_color_primary"
        android:padding="8dp">


        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:padding="8dp"
            android:text="Chama Settings"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >

        <androidx.cardview.widget.CardView
            android:id="@+id/cardChamaInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_gravity="fill"
            android:layout_marginTop="70dp"
            android:layout_marginBottom="530dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            android:backgroundTint="@color/design_default_color_primary"
            >

            <LinearLayout
                android:layout_width="140dp"
                android:layout_height="100dp"
                android:layout_marginLeft="140dp"
                android:orientation="vertical"
                android:gravity="center_vertical"

                >

                <TextView
                    android:id="@+id/txtName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chama Info"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    />



            </LinearLayout>


            <ImageView
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_baseline_group_24"
                />


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardLeaveChama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_gravity="fill"
            android:layout_marginTop="170dp"
            android:layout_marginBottom="430dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            android:clickable="true"
            android:backgroundTint="@color/design_default_color_primary"
            >

            <LinearLayout
                android:layout_width="160dp"
                android:layout_height="100dp"
                android:layout_marginLeft="130dp"
                android:orientation="vertical"
                android:gravity="center_vertical"

                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Leave Chama"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    />



            </LinearLayout>


            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_baseline_person_remove_24"
                android:padding="30dp"
                app:strokeWidth="3dp"
                android:layout_marginLeft="40dp"
                app:strokeColor="@color/white"
                app:tint="@color/white" />


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardToHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_gravity="fill"

            android:layout_marginTop="270dp"
            android:layout_marginBottom="315dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            android:clickable="true"
            android:backgroundTint="@color/design_default_color_primary"
            >

            <LinearLayout
                android:layout_width="160dp"
                android:layout_height="100dp"
                android:layout_marginLeft="130dp"
                android:orientation="vertical"
                android:gravity="center_vertical"

                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Exit to Home"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    />



            </LinearLayout>


            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_baseline_home_24"
                android:padding="30dp"
                app:strokeWidth="3dp"
                android:layout_marginLeft="40dp"
                app:strokeColor="@color/white"
                app:tint="@color/white" />


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardjoinRequests"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_gravity="fill"
            android:layout_marginTop="390dp"
            android:layout_marginBottom="200dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            android:clickable="true"
            android:backgroundTint="@color/design_default_color_primary"
            >

            <LinearLayout
                android:layout_width="160dp"
                android:layout_height="100dp"
                android:layout_marginLeft="130dp"
                android:orientation="vertical"
                android:gravity="center_vertical"

                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Join Requests"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    />



            </LinearLayout>


            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_baseline_person_add_24"
                android:padding="30dp"
                app:strokeWidth="3dp"
                android:layout_marginLeft="40dp"
                app:strokeColor="@color/white"
                app:tint="@color/white" />


        </androidx.cardview.widget.CardView>

    </GridLayout>




</FrameLayout>