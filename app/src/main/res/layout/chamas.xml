<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    >


        <androidx.cardview.widget.CardView
            android:id="@+id/cardJoinChama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="10dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            android:backgroundTint="@color/design_default_color_primary"
            >

            <LinearLayout
                android:layout_width="160dp"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:orientation="vertical"
                android:gravity="center_vertical"

                >

                <TextView
                    android:id="@+id/chamaName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ChamaName"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    />

                <TextView
                    android:id="@+id/chamaDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Description"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    />



            </LinearLayout>

            <Button
                android:id="@+id/requestButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="240dp"
                android:layout_marginRight="20dp"
                android:drawableLeft="@drawable/ic_baseline_how_to_reg_24"
                android:text="Request"
                android:textColor="@color/design_default_color_primary"
                android:textAllCaps="false"
                android:textSize="13sp"
                android:textStyle="bold"
                android:backgroundTint="@color/white"
                android:drawableTint="@color/design_default_color_primary"
                />




        </androidx.cardview.widget.CardView>


</LinearLayout>