<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/cardIndividualFine"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="5dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        android:backgroundTint="@color/design_default_color_primary"
        >


        <TextView
            android:id="@+id/txtFineId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:text="Id"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            />

        <TextView
            android:id="@+id/txtfineStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="45dp"
            android:text="Status"
            android:textSize="15sp"
            android:textColor="@color/white"
            />



        <Button
            android:id="@+id/btnIndividualFine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="250dp"
            android:layout_marginRight="20dp"
            android:drawableLeft="@drawable/ic_baseline_visibility_24"
            android:text="View"
            android:textColor="@color/design_default_color_primary"
            android:textAllCaps="false"
            android:textSize="13sp"
            android:textStyle="bold"
            android:backgroundTint="@color/white"
            android:drawableTint="@color/design_default_color_primary"
            />




    </androidx.cardview.widget.CardView>


</LinearLayout>